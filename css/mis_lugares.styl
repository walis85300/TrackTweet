azul_secundario = #00a0b0

.main
	width 100%
	height 100%

	.places

		width 28%
		max-height 530px
		overflow-y: scroll
		padding .5rem

		.top
			line-height 2rem
			margin-bottom 1rem
			a
				float right
				margin-right 1rem
			.title
				font-size 2rem
				font-weight: bolder
				margin-left 1rem
			.new_place
				background-color: azul_secundario
				color white
				font-size 3rem
				height 2rem
				text-align: center
				width 15%


		section
			.place
				margin .5rem
				padding .5rem
				background-color: rgba(black,.05)
				.name
					font-weight 300
					font-size 1.5rem
					margin-bottom 10px
				.description
					font-weight lighter
					font-size 1rem

	.map
		width 69%
		height 530px

	.places,.map
		display inline-block
		vertical-align top
