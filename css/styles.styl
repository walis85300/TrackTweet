@import 'normalize.styl'
body
	
	font-family 'Raleway' , sans-serif;
	font-weight 200
	font-size 18px


a 
	text-decoration none
h2
	font-weight 400

.margin-top
	margin-top 4em
.margin-bottom
	margin-bottom 12em
.margin-left
	margin-left 4em
.margin-right
	margin-right 4em	

.margin-top-medium
	margin-top 2.5em
.margin-bottom-medium
	margin-bottom 2.5em
.margin-left-medium
	margin-left 2.5em
.margin-right-medium
	margin-right 2.5em	


.breaker-left
	border-left 1px solid #edc951

.text-align-center
	text-align center
.text-align-left
	text-align left

header
	background white
	width: 100%
	height 100px
	h1
		color white
	a:visited
		color #b2b2b2

	nav 
		margin-top 22px
		float right
		vertical-align middle
		ul
			vertical-align top
			li
				color #b2b2b2
				display inline-block
				padding-right 50px
	.logo-brand
		background url('../assets/logo.png') no-repeat 20px 10px
		width 285px
		height 85px
	.logo-brand, nav
		display inline-block

.call-to-action
	background #00a0b0
	border-bottom: 4px solid #008f9d;
	color white
	padding 0.5em 4em

.content-all
	// position relative
	// margin-top 100px

.content-main
	text-align center
	.content-map
		background url('../assets/bg-map.jpg')
		color #414141
		height 80vh
		.box-central
			background rgba(255,255,255,0.9)
			position relative
			padding 1em
			top 140px
			margin 0 auto
			height 200px
			width: 40%
			box-shadow rgba(65,65,65,0.5) 0px 0px 30px
			h2
				margin-top 10px
				font-size 40px
				span
					font-size 32px
	.cinta-comofunciona
		background #cc333f
		color white
		font-size 38px
		font-weight 200
		width 100%
		height 120px
		div
			line-height 120px
	.arrow
		margin 0 auto
		width 160px
		height 40px
		&:after
			border-top 30px solid #cc333f
			border-left 50px solid transparent
			border-right 50px solid transparent
			content ""
			display inline-block
			margin-left .5em		

.how-to-work
	margin-top 40px
	position relative	
	.vertical-line
		border-left 1px solid #b2b2b2
		left 0
		height 1000px
		position absolute
		top 101px
		margin 0 auto
		right 0
		width 2px
		z-index -100

	.circle-number-step
		border-radius 50%
		border 1px solid #b2b2b2 
		color #b2b2b2
		text-align center
		line-height 100px
		height 100px
		width 100px
		margin 0 auto

		span.number-step
			font-weight 100
			font-size 50px
	
	.wrapper-text-img	
		overflow hidden
	.copy-lead,.img-browser
		display inline-block
		vertical-align top
	
	.img-browser
		width 50%
		margin-left 80px
		img
			box-shadow rgba(0, 0, 0, .5) 0px  0px 40px
	.copy-lead
		color #b2b2b2
		width 35%
		h3
			font-size 36px
			font-weight 100
		p
			font-size 20px
	.step-4
		color #b2b2b2
		h3
			font-size 36px
			font-weight 100
		.wrapper-step-4
			width 550px
			margin 0 auto
			p.lead
				font-size 20px
				margin-bottom 1.5em
		.box-grey
			background #f4f4f4
			padding 0.5em 1em
			margin-top 5em
			ul
				list-style none
				list-style-image url()
				text-decoration none
.maps-timeline-lead
	background url('../assets/images/maps-timeline.jpg')
	color white
	height 346px
	text-align center
	h3
		line-height 346px
		font-size 40px
		font-weight 400
		margin-top 10px
.contact-box
	margin 0 auto

footer
	background url('../assets/images/rag-map.png') no-repeat right bottom, url('../assets/logo.png') no-repeat center
	height 450px
	a
		color #09c8db
	ul
		list-style none
		li
			padding .2em 0

	.contact-right,.contact-left
		display inline-block
		height 60px
		margin 0 auto
		vertical-align middle
		width 200px
	.social-buttons
		
		.btn-facebook
			height 40px
			display inline-block
			overflow hidden
			margin-left 0.5em
			img
				height auto
				&:hover
					margin-top -42px

	.footer-credits
		padding 0 0 2em 2em
