		color #9C9C9C
	p
		font-weight 300
	a.ver 
		background azul_secundario
		color white
		float right
		padding .3em 1.5em
.new-promotion
	overflow hidden
	a
		background rojo_primario
		border-bottom: 4px solid #A72C36;
		color white
		padding 0.25em 2em
.detalle-promocion
	width 800px
	margin 0 auto
	.tweet
		margin 0 auto
		width 500px
	.statc
		
		text-align center
		.retweets,.favoritos
			display inline-block
			vertical-align top
			margin-left 2em
		h3
			color azul_secundario
			margin 0
			font-size 3em
		span
			color #9C9C9C
.primer-rt
	font-size 16px
	figure
		margin 0
		img
			width 180px
			height 180px
	.tweet-contet
		width 49%
	.photo-user
		width 39%
