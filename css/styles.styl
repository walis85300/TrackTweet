@import 'normalize.styl'

gris_claro = #f4f4f4


body
	
	font-family 'Raleway' , sans-serif;
	font-weight 200
	font-size 18px


a 
	text-decoration none
h2
	font-weight 400

.margin-top
	margin-top 4em


header
	background white
	border-bottom 1px solid gris_claro
	height 100px
	width: 100%
	h1
		color white
	a
		color #b2b2b2

	nav 
		margin-top 22px
		float right
		vertical-align middle
		ul
			vertical-align top
			li
				color #b2b2b2
				display inline-block
				padding-right 50px
	.logo-brand
		background url('../assets/logo.png') no-repeat 20px 10px
		width 285px
		height 85px
	.logo-brand, nav
		display inline-block

.call-to-action
	background #00a0b0
	border-bottom: 4px solid #008f9d;
	color white
	padding 0.5em 4em

.content-all
	// position relative
	// margin-top 100px

.content-main
	text-align center
	.content-map
		background url('../assets/bg-map.jpg')
		color #414141
		height 80vh
		.box-central
			background rgba(255,255,255,0.9)
			position relative
			padding 1em
			top 140px
			margin 0 auto
			height 200px
			width: 40%
			box-shadow rgba(65,65,65,0.5) 0px 0px 30px
			h2
				margin-top 10px
				font-size 40px
				span
					font-size 32px
	.cinta-comofunciona
		background #cc333f
		color white
		font-size 38px
		font-weight 200
		width 100%
		height 120px
		div
			position relative
			top 10px
			padding-top 30px
	.arrow
		margin 0 auto
		width 100px
		height 40px
		&:after
			border-top 30px solid #cc333f
			border-left 50px solid transparent
			border-right 50px solid transparent
			content ""
			display inline-block
			margin-left .5em		

.how-to-work
	margin-top 40px	
	.vertical-line
		border-left 1px solid #b2b2b2
		left 0
		height 500px
		position absolute
		margin 0 auto
		right 0
		width 2px
		z-index -100

	.wrapper-text-img	
		overflow hidden
	.circle-number-step
		border-radius 50%
		border 1px solid #b2b2b2 
		color #b2b2b2
		text-align center
		line-height 123px
		height 123px
		width 123px
		margin 0 auto

		span.number-step
			font-weight 100
			font-size 50px
	.img-browser
		box-shadow rgba(0, 0, 0, .5) 0px 0px 40px
		float left
	.copy-lead
		color #b2b2b2
		float right
		width 400px
		h3
			font-size 32px
			font-weight 100
		p


			
